{
    "manifest_version": 2,
    "name": "Frame Roger - Internet for Filmmakers",
    "description": "Curated links for the avid filmmaker :)",
    "version": "1.0.1.9",
    "chrome_url_overrides" : {
	"newtab": "index.html"
    },
    "icons": { "16": "logo16.png",
               "48": "logo48.png",
               "128": "logo128.png" },
    "browser_action": {
        "default_icon": "logo128.png",
        "default_title": "Google Mail"
    },
    "background": {
	"scripts": ["jquery.js", "background.js"]
    },
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://www.googleapis.com https://itunes.apple.com; object-src 'self'"
}
